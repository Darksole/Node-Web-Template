head
    meta(charset='UTF-8')
    title Web Template
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.3/angular-route.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js')
    link(rel='stylesheet', href='stylesheets/style.css')
    link(href= "https://fonts.googleapis.com/css?family=Abel" rel="stylesheet")
body
    div
        div
            nav.navbar.navbar-inverse.navbar-default.navbar-fixed-top(role='navigation', style='padding-left:130px;')
                container
                    .navbar-header

                        button(type="button" ,class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar" ,aria-expanded="false", aria-controls="navbar")
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        #navbar.navbar-collapse.collapse
                            ul.nav.navbar-nav
                                li
                                    a(href='/') Web Template
                                li.active
                                    a(href='/contact') Contact us
        .jumbotron
            br
            br
            form.contact(action='/contact', method='post')
                p.company
                    input.sr-only#yourcompany(type='text', placeholder='Your company name', name='company', required='', size='40')
                p.form_name
                    input.form-control#yourname(type='text', placeholder='Full Name', name='name', required='', size='40')
                p.form_email
                    input.form-control#youremail(type='email', placeholder='E-mail', name='email', required='', size='40')
                p.form_textarea
                    textarea.form-control#yourmessage(type='text', placeholder='Message', name='message', required='', cols='40', rows='8')
                p
                    input.form-control.btn-success(type='submit', value='Send')

    // FOOTER
    footer#footerText
        p.pull-right
            a(href='#') Back to top
        p
